// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  phoneNumber   String   @unique
  email         String?  @unique
  firstName     String
  lastName      String
  profileImage  String?
  isVerified    Boolean  @default(false)
  isActive      Boolean  @default(true)
  role          UserRole @default(CLIENT)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  wallet        Wallet?
  otpCodes      OtpCode[]
  rideRequests  RideRequest[]
  driverProfile DriverProfile?
  storeProfile  StoreProfile?
  orders        Order[]
  reviews       Review[]
  notifications Notification[]

  @@map("users")
}

model OtpCode {
  id        String   @id @default(cuid())
  userId    String
  code      String
  purpose   OtpPurpose
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("otp_codes")
}

model Wallet {
  id            String   @id @default(cuid())
  userId        String   @unique
  balance       Decimal  @default(0) @db.Decimal(10, 2)
  blockedAmount Decimal  @default(0) @db.Decimal(10, 2)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@map("wallets")
}

model Transaction {
  id              String            @id @default(cuid())
  walletId        String
  type            TransactionType
  amount          Decimal           @db.Decimal(10, 2)
  fees            Decimal           @default(0) @db.Decimal(10, 2)
  status          TransactionStatus @default(PENDING)
  paymentMethod   PaymentMethod
  externalRef     String?           // Référence externe (YAS, FLOOZ, etc.)
  description     String
  metadata        Json?             // Données supplémentaires
  processedAt     DateTime?
  createdAt       DateTime          @default(now())

  // Relations
  wallet Wallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  ride   Ride?  @relation(fields: [rideId], references: [id])
  rideId String?
  order  Order? @relation(fields: [orderId], references: [id])
  orderId String?

  @@map("transactions")
}

model DriverProfile {
  id              String            @id @default(cuid())
  userId          String            @unique
  licenseNumber   String            @unique
  vehicleType     VehicleType
  vehicleBrand    String
  vehicleModel    String
  vehicleYear     Int
  vehicleColor    String
  plateNumber     String            @unique
  insuranceNumber String
  isOnline        Boolean           @default(false)
  isAvailable     Boolean           @default(true)
  rating          Decimal           @default(0) @db.Decimal(2, 1)
  totalRides      Int               @default(0)
  status          DriverStatus      @default(INACTIVE)
  currentLat      Decimal?          @db.Decimal(10, 8)
  currentLng      Decimal?          @db.Decimal(11, 8)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  rides Ride[]

  @@map("driver_profiles")
}

model RideRequest {
  id             String      @id @default(cuid())
  userId         String
  pickupLat      Decimal     @db.Decimal(10, 8)
  pickupLng      Decimal     @db.Decimal(11, 8)
  pickupAddress  String
  dropoffLat     Decimal     @db.Decimal(10, 8)
  dropoffLng     Decimal     @db.Decimal(11, 8)
  dropoffAddress String
  rideType       RideType
  estimatedPrice Decimal     @db.Decimal(10, 2)
  status         RideStatus  @default(PENDING)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  ride Ride?

  @@map("ride_requests")
}

model Ride {
  id             String      @id @default(cuid())
  requestId      String      @unique
  driverId       String
  pickupLat      Decimal     @db.Decimal(10, 8)
  pickupLng      Decimal     @db.Decimal(11, 8)
  pickupAddress  String
  dropoffLat     Decimal     @db.Decimal(10, 8)
  dropoffLng     Decimal     @db.Decimal(11, 8)
  dropoffAddress String
  rideType       RideType
  price          Decimal     @db.Decimal(10, 2)
  distance       Decimal?    @db.Decimal(10, 2) // en km
  duration       Int?        // en minutes
  status         RideStatus  @default(ACCEPTED)
  startedAt      DateTime?
  completedAt    DateTime?
  cancelledAt    DateTime?
  cancelReason   String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  request      RideRequest   @relation(fields: [requestId], references: [id], onDelete: Cascade)
  driver       DriverProfile @relation(fields: [driverId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  review       Review?

  @@map("rides")
}

model StoreProfile {
  id          String      @id @default(cuid())
  userId      String      @unique
  storeName   String
  description String?
  category    StoreCategory
  address     String
  latitude    Decimal?    @db.Decimal(10, 8)
  longitude   Decimal?    @db.Decimal(11, 8)
  phoneNumber String
  email       String?
  logo        String?
  banner      String?
  isActive    Boolean     @default(true)
  rating      Decimal     @default(0) @db.Decimal(2, 1)
  totalOrders Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  products Product[]
  orders   Order[]

  @@map("store_profiles")
}

model Product {
  id          String   @id @default(cuid())
  storeId     String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String
  images      String[] // URLs des images
  stock       Int      @default(0)
  isActive    Boolean  @default(true)
  weight      Decimal? @db.Decimal(8, 3) // en kg
  dimensions  String?  // "LxlxH en cm"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  store      StoreProfile @relation(fields: [storeId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@map("products")
}

model Order {
  id             String      @id @default(cuid())
  userId         String
  storeId        String
  orderNumber    String      @unique
  status         OrderStatus @default(PENDING)
  totalAmount    Decimal     @db.Decimal(10, 2)
  deliveryFee    Decimal     @default(0) @db.Decimal(10, 2)
  deliveryAddress String
  deliveryLat    Decimal?    @db.Decimal(10, 8)
  deliveryLng    Decimal?    @db.Decimal(11, 8)
  phoneNumber    String
  notes          String?
  paymentMethod  PaymentMethod
  paidAt         DateTime?
  confirmedAt    DateTime?
  shippedAt      DateTime?
  deliveredAt    DateTime?
  cancelledAt    DateTime?
  cancelReason   String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  store        StoreProfile  @relation(fields: [storeId], references: [id], onDelete: Cascade)
  items        OrderItem[]
  transactions Transaction[]
  review       Review?

  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Prix au moment de la commande

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Review {
  id        String     @id @default(cuid())
  userId    String
  rating    Int        // 1-5
  comment   String?
  type      ReviewType
  createdAt DateTime   @default(now())

  // Relations
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  ride  Ride?  @relation(fields: [rideId], references: [id])
  rideId String? @unique
  order Order? @relation(fields: [orderId], references: [id])
  orderId String? @unique

  @@map("reviews")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType
  isRead    Boolean          @default(false)
  data      Json?            // Données supplémentaires
  createdAt DateTime         @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

// Enums
enum UserRole {
  CLIENT
  DRIVER
  STORE_OWNER
  ADMIN
}

enum OtpPurpose {
  REGISTRATION
  LOGIN
  PASSWORD_RESET
  PHONE_VERIFICATION
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  PAYMENT
  REFUND
  TRANSFER
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum PaymentMethod {
  YAS
  FLOOZ
  VISA
  MASTERCARD
  PI_SPI_BCEAO
  WALLET
}

enum VehicleType {
  TAXI
  MOTO
  TRICYCLE
  DELIVERY_VAN
}

enum DriverStatus {
  INACTIVE
  ACTIVE
  SUSPENDED
  BLOCKED
}

enum RideType {
  TAXI
  LUX_PLUS
  DRIVER
  DELIVERY
}

enum RideStatus {
  PENDING
  ACCEPTED
  DRIVER_ARRIVING
  ARRIVED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum StoreCategory {
  FOOD
  FASHION
  ELECTRONICS
  HEALTH
  HOME
  BOOKS
  SPORTS
  OTHER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ReviewType {
  RIDE
  ORDER
}

enum NotificationType {
  RIDE_REQUEST
  RIDE_UPDATE
  ORDER_UPDATE
  PAYMENT
  GENERAL
}