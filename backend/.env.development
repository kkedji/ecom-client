# Environment de développement/démo
NODE_ENV=development
PORT=5000

# Base de données SQLite pour démo (plus simple)
DATABASE_URL="file:./dev.db"
REDIS_URL="redis://localhost:6379"

# JWT & Security (clés de développement)
JWT_SECRET=demo_jwt_secret_ecom_2024_development
JWT_REFRESH_SECRET=demo_refresh_secret_ecom_2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# SMS Services (Mode démo - pas d'envoi réel)
DEMO_MODE=true
TOGOCEL_API_URL=https://demo-sms.ecom.local
TOGOCEL_API_KEY=demo_togocel_key
TOGOCEL_SHORT_CODE=2024

MOOV_API_URL=https://demo-sms.ecom.local
MOOV_API_KEY=demo_moov_key
MOOV_SHORT_CODE=2025

# Fallback SMS pour tests (utilise un service de test)
TWILIO_ACCOUNT_SID=demo_account_sid
TWILIO_AUTH_TOKEN=demo_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Mobile Money (Mode démo)
YAS_API_URL=https://demo-yas.ecom.local
YAS_MERCHANT_ID=demo_yas_merchant
YAS_API_KEY=demo_yas_key
YAS_WEBHOOK_SECRET=demo_yas_webhook_secret

FLOOZ_API_URL=https://demo-flooz.ecom.local
FLOOZ_MERCHANT_ID=demo_flooz_merchant
FLOOZ_API_KEY=demo_flooz_key
FLOOZ_WEBHOOK_SECRET=demo_flooz_webhook_secret

# PI-SPI BCEAO (Mode démo)
BCEAO_API_URL=https://demo-bceao.ecom.local
BCEAO_MERCHANT_ID=demo_bceao_merchant
BCEAO_API_KEY=demo_bceao_key

# Services externes (gratuits pour démo)
GOOGLE_MAPS_API_KEY=demo_maps_key
CLOUDINARY_CLOUD_NAME=demo_cloud
CLOUDINARY_API_KEY=demo_cloudinary_key
CLOUDINARY_API_SECRET=demo_cloudinary_secret

# Rate Limiting (plus permissif en démo)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# URLs pour les callbacks (Netlify)
API_BASE_URL=https://ecom-backend-demo.netlify.app
FRONTEND_URL=https://ecom-app-demo.netlify.app