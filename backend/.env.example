# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="postgresql://ecom_user:ecom_password@localhost:5432/ecom_db"
REDIS_URL="redis://localhost:6379"

# JWT & Security
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# SMS Services (Togo)
TOGOCEL_API_URL=https://api.togocel.tg/sms
TOGOCEL_API_KEY=your_togocel_api_key
TOGOCEL_SHORT_CODE=2024

MOOV_API_URL=https://api.moov.tg/sms
MOOV_API_KEY=your_moov_api_key
MOOV_SHORT_CODE=2025

# Fallback SMS (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Mobile Money Integrations
YAS_API_URL=https://api.yas.tg
YAS_MERCHANT_ID=your_yas_merchant_id
YAS_API_KEY=your_yas_api_key
YAS_WEBHOOK_SECRET=your_yas_webhook_secret

FLOOZ_API_URL=https://api.flooz.tg
FLOOZ_MERCHANT_ID=your_flooz_merchant_id
FLOOZ_API_KEY=your_flooz_api_key
FLOOZ_WEBHOOK_SECRET=your_flooz_webhook_secret

# PI-SPI BCEAO
BCEAO_API_URL=https://pi-spi.bceao.int
BCEAO_MERCHANT_ID=your_bceao_merchant_id
BCEAO_API_KEY=your_bceao_api_key
BCEAO_CERTIFICATE_PATH=./certs/bceao.pem

# Cloudinary (Images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Maps & Geolocation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_if_using

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password